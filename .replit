modules = ["rust", "nix", "docker", "web", "rust-nightly", "rust-stable", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["trunk", "cargo-edit", "rustup", "wasm-pack", "pkg-config", "openssl"]

# Environment variables for Dragon's Labyrinth
[env]
RUST_BACKTRACE = "1"
RUST_LOG = "info"
# OpenAI API key should be set as a secret in Replit
# OPENAI_API_KEY = "your_api_key_here"
# OPENAI_MODEL = "gpt-4o"
# REPORTS_DIR = "/tmp/reports"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Horror RPG Server"

[[workflows.workflow]]
name = "Horror RPG Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "trunk serve --address 0.0.0.0 --port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
