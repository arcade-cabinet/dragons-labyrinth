# Use pyenv Python version (reads from .python-version)
# pyenv is already initialized in ~/.bash_profile
layout python

# Export UV environment variables for better integration
export UV_PYTHON_PREFERENCE=only-managed
export UV_PROJECT_ENVIRONMENT=.venv

# Ensure pip uses the virtual environment
export PIP_REQUIRE_VIRTUALENV=true

# Add local bin to PATH for project tools
PATH_add .venv/bin

# Enable hatch integration
export HATCH_ENV_TYPE_VIRTUAL_PATH=".venv"
