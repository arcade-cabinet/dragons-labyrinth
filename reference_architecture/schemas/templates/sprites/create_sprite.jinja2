{#
Create Sprite Template

This template generates code to create a sprite based on student choices.
It demonstrates how student decisions directly affect the generated game code.
#}
{% set size_map = {
    "tiny (0.5)": 0.5,
    "normal (1.0)": 1.0,
    "large (1.5)": 1.5,
    "huge (2.0)": 2.0
} %}

{% set position_map = {
    "center": {"x": 400, "y": 300},
    "left": {"x": 100, "y": 300},
    "right": {"x": 700, "y": 300},
    "top": {"x": 400, "y": 500},
    "bottom": {"x": 400, "y": 100}
} %}

{% set sprite_var = sprite_type + "_sprite" %}
{% set scale = size_map[sprite_size] %}
{% set pos = position_map[start_position] %}

# === {{ sprite_type|title }} Sprite Creation ===
# Student chose: {{ sprite_type }} sprite with {{ sprite_size }} size at {{ start_position }}

# Create the {{ sprite_type }} sprite from your chosen image
{{ sprite_var }} = arcade.Sprite("{{ sprite_image }}", scale={{ scale }})

# Position the sprite where you wanted it
{{ sprite_var }}.center_x = {{ pos.x }}
{{ sprite_var }}.center_y = {{ pos.y }}

{% if sprite_type == "player" %}
# Since this is a player sprite, let's add some basic properties
{{ sprite_var }}.change_x = 0  # Horizontal movement speed
{{ sprite_var }}.change_y = 0  # Vertical movement speed
{{ sprite_var }}.health = 100  # Player health
{% elif sprite_type == "enemy" %}
# Since this is an enemy sprite, let's add some AI properties
{{ sprite_var }}.change_x = 2  # Enemy movement speed
{{ sprite_var }}.patrol_distance = 200  # How far enemy patrols
{{ sprite_var }}.direction = 1  # 1 for right, -1 for left
{% elif sprite_type == "collectible" %}
# Since this is a collectible, let's add collection properties
{{ sprite_var }}.points = 10  # Points awarded when collected
{{ sprite_var }}.collected = False  # Whether it's been collected
{% endif %}

# Add the sprite to the appropriate list (you'll need to create these lists first!)
{% if sprite_type == "player" %}
# Add to player list: player_list.append({{ sprite_var }})
{% elif sprite_type == "enemy" %}
# Add to enemy list: enemy_list.append({{ sprite_var }})
{% elif sprite_type == "collectible" %}
# Add to collectible list: collectible_list.append({{ sprite_var }})
{% else %}
# Add to appropriate sprite list: sprite_list.append({{ sprite_var }})
{% endif %}

print(f"Created {{ sprite_type }} sprite at position ({%raw%}{{ sprite_var }}.center_x}, {{ sprite_var }}.center_y{%endraw%}) with scale {{ scale }}")
