extends Node3D

class_name FightingPitTransition

signal transition_complete(performance: Dictionary)
signal transition_failed(reason: String)
signal trait_gained(trait: String, amount: int)
signal fighter_recruited(fighter: FighterData)

@onready var arena_environment = $ArenaEnvironment
@onready var pit_master = $PitMaster
@onready var crowd_system = $CrowdSystem
@onready var combat_orchestrator = $CombatOrchestrator
@onready var economy_manager = $EconomyManager

var performance_tracker = {
    "command_efficiency": 0.0,
    "tactical_creativity": 0.0,
    "economic_management": 0.0,
    "brutality_ratio": 0.5,  # 0 = merciful, 1 = brutal
    "party_loyalty": 1.0,
    "rounds_won": 0,
    "fighters_lost": 0,
    "gold_spent": 0,
    "crowd_favor": 0.5,
    "leadership_style": ""  # tyrant, strategist, merchant, unified
}

var current_party: Array[Fighter] = []
var current_companions: Array[Companion] = []
var available_fighters: Array[FighterData] = []
var current_round: int = 0
var betrayal_risk: Dictionary = {}  # fighter_id -> risk_level

const ROUND_CONFIGS = [
    {"name": "Proving Ground", "enemies": 3, "hazards": false, "betrayal": false},
    {"name": "Burning Sands", "enemies": 4, "hazards": true, "betrayal": false},
    {"name": "Surrounded", "enemies": 8, "hazards": true, "betrayal": false},
    {"name": "Bidding War", "enemies": 5, "hazards": true, "betrayal": true},
    {"name": "Champion's Choice", "enemies": 0, "hazards": true, "betrayal": true}
]

func _ready():
    # Gather current forces
    current_party = GlobalState.get_active_party_members()
    current_companions = GlobalState.get_active_companions()
    
    # Initialize based on composition
    _evaluate_force_composition()
    
    # Set up the arena
    _initialize_arena()

func _evaluate_force_composition():
    if current_party.is_empty() and current_companions.is_empty():
        # Lone wolf must hire
        performance_tracker.leadership_style = "untested"
        _force_first_recruitment()
    elif current_companions.is_empty():
        # Pure mercenary leader
        performance_tracker.leadership_style = "mercenary"
    elif current_party.is_empty():
        # Has companions but no mercs - interesting
        performance_tracker.leadership_style = "reluctant"
    else:
        # Mixed force - most complex
        performance_tracker.leadership_style = "balanced"

func _initialize_arena():
    # Arena emerges from the mists
    arena_environment.rise_from_earth()
    
    # Crowd materializes
    crowd_system.materialize_spectators()
    crowd_system.favor_changed.connect(_on_crowd_favor_changed)
    
    # Atmospheric audio
    AudioManager.play_arena_ambience()
    AudioManager.play_crowd_murmur(crowd_system.get_crowd_size())
    
    # Pit Master entrance
    _spawn_pit_master()

func _spawn_pit_master():
    pit_master.dramatic_entrance()
    await pit_master.entrance_complete
    
    # Different dialogue based on force composition
    var dialogue = DialogueSystem.start_dialogue("pit_master_intro")
    
    match performance_tracker.leadership_style:
        "untested":
            dialogue.add_line("Fresh meat for the pit. You'll need fighters if you want to survive.")
        "mercenary":
            dialogue.add_line("I see you understand the truth. Gold buys loyalty, loyalty buys victory.")
        "reluctant":
            dialogue.add_line("Your 'friends' won't save you here. This is about strength.")
        "balanced":
            dialogue.add_line("Trying to play both sides? We'll see how long that lasts.")
    
    await dialogue.finished
    _begin_trials()

func _force_first_recruitment():
    UI.show_narrative("You cannot face the pit alone...")
    
    # Offer three fighter types
    var recruitment_ui = preload("res://ui/fighter_recruitment.tscn").instantiate()
    add_child(recruitment_ui)
    
    recruitment_ui.setup_forced_recruitment([
        {"name": "Brutus", "type": "warrior", "cost": 50, "trait": "bloodthirsty"},
        {"name": "Silvia", "type": "rogue", "cost": 40, "trait": "opportunist"},
        {"name": "Marcus", "type": "tactician", "cost": 60, "trait": "calculating"}
    ])
    
    var chosen = await recruitment_ui.fighter_selected
    _recruit_fighter(chosen)

func _recruit_fighter(fighter_data: Dictionary):
    var fighter = Fighter.new()
    fighter.initialize(fighter_data)
    
    current_party.append(fighter)
    GlobalState.player_gold -= fighter_data.cost
    performance_tracker.gold_spent += fighter_data.cost
    
    fighter_recruited.emit(fighter)
    
    # Companions may react
    for companion in current_companions:
        companion.react_to_mercenary_hiring()

func _begin_trials():
    current_round = 0
    _start_next_round()

func _start_next_round():
    if current_round >= ROUND_CONFIGS.size():
        _complete_trials()
        return
    
    var round_config = ROUND_CONFIGS[current_round]
    
    # Announce round
    pit_master.announce_round(round_config.name)
    crowd_system.build_anticipation()
    
    # Set up arena for round
    arena_environment.configure_for_round(current_round)
    
    # Offer between-round options
    if current_round > 0:
        await _between_round_management()
    
    # Special handling for final round
    if current_round == 4:
        _present_final_choice()
    else:
        _start_combat_round(round_config)

func _between_round_management():
    # Heal/resurrect options
    economy_manager.offer_medical_services(current_party)
    
    # Recruitment opportunities
    if performance_tracker.crowd_favor > 0.6:
        economy_manager.offer_elite_fighters()
    
    # Betrayal prevention
    _check_loyalty_management()
    
    # Companion concerns
    if not current_companions.is_empty():
        _handle_companion_concerns()

func _check_loyalty_management():
    for fighter in current_party:
        var loyalty = fighter.get_loyalty()
        if loyalty < 0.5:
            betrayal_risk[fighter.id] = 1.0 - loyalty
            
            # Offer options to maintain loyalty
            var choice_ui = preload("res://ui/loyalty_choice.tscn").instantiate()
            add_child(choice_ui)
            
            choice_ui.setup_fighter_loyalty(fighter, {
                "pay_bonus": fighter.daily_rate * 5,
                "intimidate": "requires_tyrant_trait",
                "inspire": "requires_strategist_trait"
            })
            
            var choice = await choice_ui.choice_made
            _handle_loyalty_choice(fighter, choice)

func _start_combat_round(config: Dictionary):
    # Transition to tactical view
    combat_orchestrator.setup_arena_combat()
    
    # Spawn enemies based on config
    var enemies = combat_orchestrator.spawn_enemies(config.enemies, current_round)
    
    # Enable hazards if configured
    if config.hazards:
        arena_environment.activate_round_hazards(current_round)
    
    # Set up betrayal mechanics
    if config.betrayal:
        _enable_betrayal_mechanics()
    
    # Start tactical combat
    combat_orchestrator.combat_finished.connect(_on_round_finished, CONNECT_ONE_SHOT)
    combat_orchestrator.start_combat()

func _enable_betrayal_mechanics():
    # Enemies can make offers during combat
    economy_manager.enable_combat_bribes()
    
    for fighter in current_party:
        if fighter.id in betrayal_risk:
            fighter.set_betrayal_chance(betrayal_risk[fighter.id])
            fighter.betrayal_triggered.connect(_on_fighter_betrayal)

func _on_fighter_betrayal(fighter: Fighter, bribe_amount: int):
    # Player gets chance to counter
    var counter_ui = preload("res://ui/counter_betrayal.tscn").instantiate()
    get_tree().root.add_child(counter_ui)
    
    counter_ui.setup_betrayal_situation(fighter, bribe_amount)
    
    var choice = await counter_ui.choice_made
    
    match choice.action:
        "outbid":
            if GlobalState.player_gold >= choice.amount:
                GlobalState.player_gold -= choice.amount
                performance_tracker.gold_spent += choice.amount
                fighter.cancel_betrayal()
                fighter.increase_loyalty(0.2)
            else:
                _execute_betrayal(fighter)
        
        "threaten":
            if performance_tracker.brutality_ratio > 0.7:
                fighter.cancel_betrayal()
                fighter.increase_fear(0.3)
                trait_gained.emit("tyrant", 5)
            else:
                _execute_betrayal(fighter)
        
        "let_go":
            _execute_betrayal(fighter)
            trait_gained.emit("pragmatic", 5)

func _execute_betrayal(fighter: Fighter):
    # Fighter switches sides
    combat_orchestrator.switch_fighter_allegiance(fighter)
    current_party.erase(fighter)
    performance_tracker.fighters_lost += 1
    
    # Party morale impact
    for other_fighter in current_party:
        other_fighter.decrease_morale(0.2)
    
    # Companion reactions
    for companion in current_companions:
        companion.react_to_betrayal("You couldn't even keep your hired swords loyal...")

func _on_round_finished(victory: bool, stats: Dictionary):
    if not victory:
        _handle_round_failure()
        return
    
    performance_tracker.rounds_won += 1
    
    # Update metrics
    performance_tracker.command_efficiency += stats.command_rating
    performance_tracker.tactical_creativity += stats.creativity_bonus
    
    # Crowd reaction
    var crowd_change = _calculate_crowd_reaction(stats)
    crowd_system.adjust_favor(crowd_change)
    
    # Post-round options
    _present_post_round_choices(stats)

func _present_post_round_choices(combat_stats: Dictionary):
    # What to do with defeated enemies
    var defeated_count = combat_stats.enemies_defeated
    
    var choice_ui = preload("res://ui/victory_choice.tscn").instantiate()
    add_child(choice_ui)
    
    choice_ui.add_option("Execute them all", "brutal", {"crowd_favor": 0.3, "companion_disapproval": 0.5})
    choice_ui.add_option("Spare the surrendered", "merciful", {"crowd_favor": -0.2, "recruit_chance": 0.3})
    choice_ui.add_option("Recruit the strongest", "pragmatic", {"cost": defeated_count * 30})
    
    var choice = await choice_ui.choice_made
    _handle_victory_choice(choice, defeated_count)

func _present_final_choice():
    # Round 5: Champion's Choice
    UI.show_narrative("The crowd falls silent...")
    UI.show_narrative("The Pit Master steps forward...")
    
    var dialogue = DialogueSystem.start_dialogue("final_challenge")
    dialogue.add_line("You've proven yourself capable. Now choose your final test.")
    dialogue.add_line("Face me in single combat, or lead your forces against my veterans.")
    
    await dialogue.finished
    
    var choice_ui = preload("res://ui/final_choice.tscn").instantiate()
    add_child(choice_ui)
    
    choice_ui.setup_options({
        "single_combat": {
            "text": "I'll face you alone",
            "description": "Single combat. No tricks. Pure skill.",
            "trait": "confident"
        },
        "mass_battle": {
            "text": "My forces will crush yours",
            "description": "Large scale tactical battle. Command vs command.",
            "trait": "commander"
        },
        "unified_challenge": {
            "text": "We fight as one",
            "description": "You and all allies vs Pit Master and veterans.",
            "trait": "unity",
            "requires": current_companions.size() > 0 and performance_tracker.party_loyalty > 0.7
        }
    })
    
    var final_choice = await choice_ui.choice_selected
    _execute_final_challenge(final_choice)

func _execute_final_challenge(choice: String):
    match choice:
        "single_combat":
            _start_champion_duel()
        "mass_battle":
            _start_mass_battle()
        "unified_challenge":
            _start_unity_challenge()

func _start_champion_duel():
    # One on one with Pit Master
    combat_orchestrator.setup_duel(GlobalState.player, pit_master)
    
    # Party/companions watch and may intervene
    for fighter in current_party:
        if fighter.loyalty > 0.8:
            fighter.set_intervention_chance(0.3)
    
    for companion in current_companions:
        companion.set_worried_state(true)
    
    combat_orchestrator.duel_finished.connect(_on_duel_finished)

func _complete_trials():
    # Calculate final performance
    _calculate_final_scores()
    
    # Pit Master's judgment
    pit_master.deliver_verdict(performance_tracker)
    
    # Establish reputation
    match performance_tracker.leadership_style:
        "tyrant":
            GlobalState.reputation.add_aspect("feared_commander")
            trait_gained.emit("tyrant", 30)
        "strategist":
            GlobalState.reputation.add_aspect("tactical_genius")
            trait_gained.emit("strategist", 30)
        "merchant":
            GlobalState.reputation.add_aspect("merchant_prince")
            trait_gained.emit("merchant_prince", 30)
        "unified":
            GlobalState.reputation.add_aspect("true_leader")
            trait_gained.emit("war_leader", 40)
    
    # Complete transition
    transition_complete.emit(performance_tracker)

