signal entrance_complete
signal verdict_delivered

@onready var model = $PitMasterModel
@onready var weapons = $Weapons
@onready var aura_effects = $AuraEffects
@onready var voice = $VoicePlayer

var combat_stats = {
    "health": 500,
    "damage": 50,
    "armor": 30,
    "special_abilities": ["whirlwind", "intimidating_roar", "veteran_reflexes", "dragon_touched"]
}

var dialogue_variants = {
    "respect": [
        "You fight with honor. The dragon would approve.",
        "I see why you survived this long.",
        "Perhaps you are worthy of the truth..."
    ],
    "disappointment": [
        "The dragon will feast on your weakness.",
        "Another pretender. The pit remains hungry.",
        "You command through fear alone. It will fail you."
    ],
    "surprise": [
        "Impossible... you unified them...",
        "The dragon spoke of one like you...",
        "This is not strength OR weakness. This is... different."
    ]
}

func dramatic_entrance():
    # Emerge from arena shadows
    model.visible = false
    aura_effects.charge_dramatic_entrance()
    
    await get_tree().create_timer(1.0).timeout
    
    # Sudden appearance
    model.visible = true
    AudioManager.play_3d("thunderous_impact", global_position)
    aura_effects.explode_dust()
    
    # Intimidating pose
    model.play_animation("intimidating_entrance")
    voice.play_layered("I am the Pit Master. I have served dragons and slain heroes.")
    
    await model.animation_finished
    entrance_complete.emit()

func announce_round(round_name: String):
    # Voice booms across arena
    voice.set_arena_reverb(true)
    
    match round_name:
        "Proving Ground":
            voice.play_layered("Show me you can command!")
        "Burning Sands":
            voice.play_layered("The arena itself fights you now!")
        "Surrounded":
            voice.play_layered("Death from all sides! Command or die!")
        "Bidding War":
            voice.play_layered("Let's see if gold truly buys loyalty!")
        "Champion's Choice":
            voice.play_layered("Choose... your... destiny!")

func deliver_verdict(performance: Dictionary):
    # Evaluate performance
    var verdict_type = _evaluate_performance(performance)
    
    # Physical reaction
    match verdict_type:
        "respect":
            model.play_animation("respectful_nod")
            weapons.sheathe_all()
        "disappointment":
            model.play_animation("dismissive_gesture")
            weapons.ready_position()
        "surprise":
            model.play_animation("step_back_shocked")
            aura_effects.flicker_uncertainty()
    
    # Deliver dialogue
    var chosen_line = dialogue_variants[verdict_type][randi() % dialogue_variants[verdict_type].size()]
    voice.play_layered(chosen_line)
    
    # Grant rewards/consequences
    _apply_verdict_effects(verdict_type, performance)
    
    verdict_delivered.emit()

func _evaluate_performance(performance: Dictionary) -> String:
    if performance.leadership_style == "unified" and performance.rounds_won == 5:
        return "surprise"
    elif performance.command_efficiency > 0.7 and performance.brutality_ratio < 0.3:
        return "respect"
    else:
        return "disappointment"

func _apply_verdict_effects(verdict_type: String, performance: Dictionary):
    match verdict_type:
        "respect":
            # Offers to join as elite fighter
            GlobalState.unlock_fighter("pit_master_veteran")
            # Reveals dragon lore
            GlobalState.add_lore("dragon_servant_testimony")
            
        "surprise":
            # Grants unique blessing
            GlobalState.player.add_blessing("unified_command")
            # Opens secret path
            GlobalState.unlock_secret_path("pit_master_passage")
            
        "disappointment":
            # Marks you as unworthy
            GlobalState.reputation.add_aspect("pit_failure")

func setup_dragon_revelation():
    # In final moment, reveals connection to dragon
    voice.shift_to_whisper()
    voice.play_layered("The dragon... it's not what you think...")
    voice.play_layered("I was its first champion. I failed.")
    voice.play_layered("Now I test others. You... might succeed where I could not.")
    
    # Visual transformation hint
    aura_effects.reveal_dragon_corruption()
    model.show_hidden_scales()

