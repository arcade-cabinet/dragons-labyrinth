# Database files
**/*.db filter=lfs diff=lfs merge=lfs -text
**/*.sqlite filter=lfs diff=lfs merge=lfs -text
**/*.sqlite3 filter=lfs diff=lfs merge=lfs -text
# Exclude text files from LFS (these should use standard Git)
*.rs -filter
*.py -filter
*.txt -filter
*.md -filter
*.yml -filter
*.yaml -filter
*.json -filter
*.toml -filter
*.cfg -filter
*.ini -filter
*.sh -filter
*.bat -filter
*.ps1 -filter
*.yarn -filter
